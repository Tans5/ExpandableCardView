<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/header_tv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:background="@color/colorPrimary" />

        <Button
            android:id="@+id/hide_or_show_header_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hide-Or-Show-Header"/>


        <com.tans.expandablecardview.ExpandableCardView
            android:id="@+id/exd_view"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#FF0000"
                app:cardCornerRadius="10dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#00FF00"
                app:cardCornerRadius="10dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#0000FF"
                app:cardCornerRadius="10dp"/>


        </com.tans.expandablecardview.ExpandableCardView>

        <Button
            android:id="@+id/expand_or_show_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expand-Or-Fold" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>